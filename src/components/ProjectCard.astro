---
interface Props {
  title: string;
  description: string;
  href: string;
  githubUrl?: string;
}

const { title, description, href, githubUrl } = Astro.props;
---

<div class="bg-white rounded-xl border border-slate-200 p-6 flex flex-col h-full transition-all duration-200 hover:shadow-lg hover:border-slate-300">
  <h3 class="text-lg font-semibold text-slate-900 mb-2">{title}</h3>
  <p class="text-slate-600 text-sm leading-relaxed flex-grow mb-4">{description}</p>
  <div class="flex flex-wrap gap-2">
    <a
      href={href}
      class="inline-flex items-center px-4 py-2 text-sm font-medium text-primary-600 bg-primary-50 rounded-lg hover:bg-primary-100 transition-colors"
    >
      View project
    </a>
    {githubUrl && (
      <a
        href={githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-slate-600 bg-slate-100 rounded-lg hover:bg-slate-200 transition-colors"
      >
        GitHub
      </a>
    )}
  </div>
</div>
